@model ContactApp.Models.Contact

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Contacto</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Name) @Html.DisplayFor(m => m.LastName)?
                </div>
                <form action="@Url.Action("Delete", "Contact")" method="post">
                    <input type="hidden" class="form-control" name="IdContact" value="@Html.DisplayTextFor(m => m.IdContact)" />

                    <button type="submit" class="btn btn-danger">Eliminar </button>
                    <a class="btn btn-warning" href="@Url.Action("Home", "Contact")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>


