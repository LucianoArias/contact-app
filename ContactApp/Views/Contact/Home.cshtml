@model List<ContactApp.Models.Contact>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de contactos</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Register", "Contact")">Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ContactApp.Models.Contact item in Model) {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Contact", new {idcontact = item.IdContact})">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Contact", new {idcontact = item.IdContact})">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>  
</div>
